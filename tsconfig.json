{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* "allowImportingTsExtensions": true, */
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "lib": [
      "DOM"
    ]
  },
  "include": [
    "src/**/*",
    "./src/declaration.d.ts"
  ]
}